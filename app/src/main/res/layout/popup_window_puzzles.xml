<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/puzzlePopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_layout_shape"
        android:padding="20dp"
        android:layout_centerInParent="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2">

            <Button
                android:id="@+id/btnCube2x2"
                android:text="@string/cube2x2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_btn_shape"
                android:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnCube3x3"
                android:text="@string/cube3x3"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_btn_shape"
                android:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnCube4x4"
                android:text="@string/cube4x4"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_btn_shape"
                android:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnCube5x5"
                android:text="@string/cube5x5"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_btn_shape"
                android:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnCube6x6"
                android:text="@string/cube6x6"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_btn_shape"
                android:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnCube7x7"
                android:text="@string/cube7x7"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_btn_shape"
                android:layout_columnWeight="1" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnPyraminx"
                android:text="@string/pyraminx"
                android:textColor="@color/white"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="@drawable/rounded_btn_shape"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btnSquare1"
                android:background="@drawable/rounded_btn_shape"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:text="@string/square1"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btnSkewb"
                android:text="@string/skewb"
                android:textColor="@color/white"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="@drawable/rounded_btn_shape"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btnMegaminx"
                android:text="@string/megaminx"
                android:textColor="@color/white"
                android:paddingVertical="15sp"
                android:layout_margin="7dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="@drawable/rounded_btn_shape"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"/>
        </GridLayout>
    </LinearLayout>

</RelativeLayout>