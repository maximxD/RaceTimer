<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_scramble_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScramblesListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dividing_line_scrambles"
        android:rotation="180">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/text_view_scrambles_1"
            android:background="?attr/colorOnSecondary"/>

        <TextView
            android:id="@+id/text_view_scrambles_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="@string/solves"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ListView
            android:id="@+id/list_view_scrambles_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_view_scrambles_1"
            android:divider="?attr/colorOnSecondary"
            android:dividerHeight="1dp"
            android:listSelector="@color/invisible" />

    </RelativeLayout>

    <View
        android:id="@+id/dividing_line_scrambles"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_centerVertical="true"
        android:background="?attr/colorOnSecondary"/>

    <Button
        android:id="@+id/btn_back_to_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_btn_shape"
        android:text="@string/back_to_timer"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividing_line_scrambles">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/text_view_scrambles_2"
            android:background="?attr/colorOnSecondary"/>

        <TextView
            android:id="@+id/text_view_scrambles_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="7dp"
            android:text="@string/solves"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/list_view_scrambles_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_view_scrambles_2"
            android:divider="?attr/colorOnSecondary"
            android:dividerHeight="1dp"
            android:listSelector="@color/invisible" />

    </RelativeLayout>

</RelativeLayout>