<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutScrambleMain"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScramblesListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dividingLineScrambles"
        android:rotation="180">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textViewScrambles1"
            android:background="?attr/colorOnSecondary"/>

        <TextView
            android:id="@+id/textViewScrambles1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="@string/solves"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ListView
            android:id="@+id/listViewScrambles1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textViewScrambles1"
            android:divider="@color/invisible"
            android:dividerHeight="10dp"
            android:listSelector="@color/invisible"
            android:padding="5dp" />

    </RelativeLayout>

    <View
        android:id="@+id/dividingLineScrambles"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_centerVertical="true"
        android:background="?attr/colorOnSecondary"/>

    <Button
        android:id="@+id/btnBackToTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_btn_shape"
        android:text="@string/back_to_timer"
        android:padding="7dp"
        android:textSize="22sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividingLineScrambles">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textViewScrambles2"
            android:background="?attr/colorOnSecondary" />

        <TextView
            android:id="@+id/textViewScrambles2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="7dp"
            android:text="@string/solves"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewScrambles2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textViewScrambles2"
            android:divider="@color/invisible"
            android:dividerHeight="10dp"
            android:listSelector="@color/invisible"
            android:padding="5dp" />

    </RelativeLayout>

</RelativeLayout>